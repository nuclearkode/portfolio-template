---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
        <head>
                <BaseHead title={`${title} — Ahmed`} description={description} image={heroImage} />
                <BaseHead title={`${title} — Jordan Mitchell`} description={description} image={heroImage} />
                <style>
                        main {
                                width: 100%;
                                max-width: 100%;
                                margin: 0;
                        }
                        article {
                                background: white;
                                padding-bottom: 4rem;
                        }
                        .hero-image {
                                width: min(1100px, calc(100% - 2rem));
                                margin: 0 auto;
                        }
                        .hero-image img {
                                display: block;
                                margin: 3rem auto;
                                border-radius: 24px;
                                box-shadow: var(--box-shadow);
                        }
                        .prose {
                                width: min(850px, calc(100% - 2rem));
                                margin: auto;
                                padding: 0 0 2rem;
                                color: rgb(var(--gray-dark));
                        }
                        .title {
                                width: min(850px, calc(100% - 2rem));
                                margin: 0 auto 2rem;
                                padding-top: 3rem;
                                text-align: left;
                        }
                        .title h1 {
                                margin: 0 0 0.75em 0;
                        }
                        .title p {
                                margin: 0;
                                font-size: 1.05rem;
                        }
                        .date {
                                margin-bottom: 0.5em;
                                color: rgb(var(--gray));
                        }
                        .last-updated-on {
                                font-style: italic;
                                color: rgb(var(--gray));
                        }
                </style>
        </head>

        <body>
                <Header />
                <main>
                        <article>
                                <div class="title">
                                        <p class="eyebrow">In the journal</p>
                                        <h1>{title}</h1>
                                        <p class="date">
                                                <FormattedDate date={pubDate} />
                                                {
                                                        updatedDate && (
                                                                <span class="last-updated-on">
                                                                        {' '}
                                                                        · Updated <FormattedDate date={updatedDate} />
                                                                </span>
                                                        )
                                                }
                                        </p>
                                        <p>{description}</p>
                                </div>
                                <div class="hero-image">{heroImage && <img width={1200} height={600} src={heroImage} alt="" />}</div>
                                <div class="prose">
                                        <slot />
                                </div>
                        </article>
                </main>
                <Footer />
        </body>
</html>
