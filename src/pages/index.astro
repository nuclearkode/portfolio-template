                                .hero {
                                        min-height: 75vh;
                                }
                        }
                        @media (max-width: 720px) {
                                .hero {
                                        padding: 6rem 1.5rem 4rem;
                                        text-align: center;
                                        justify-content: center;
                                }
                                .hero__content {
                                        margin: 0 auto;
                                }
                                .hero-actions {
                                        justify-content: center;
                                }
                                .hero__status-card {
                                        min-width: 100%;
                                }
                                .card-section {
                                        padding: 2rem;
                                .page-sections {
                                        margin-top: -3rem;
                                        gap: 3rem;
                                }
                        }
                </style>
